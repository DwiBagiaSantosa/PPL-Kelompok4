<!DOCTYPE html>
<html>
  <head>
    <title>Items</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/items.css" />
  </head>

  <body>
    <% function editItems() {
      state = !state
      if (!state) {
        console.log(state)
      }
    }
    %>
    <nav class="navbar navbar-expand-lg bg-orange">
      <a class="navbar-brand" href="#">FABBIS Inventory</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto align-items-center">
          <li class="nav-item">
            <img src="/images/Group 1.png" alt="Logo" class="logo" />
          </li>
          <li class="nav-item">
            <div class="logout">
              <!-- <button type="submit" class="btn custom-btn">
                            <img src="/images/material-symbols_logout.png" alt="Logo" class="logo">Logout
                        </button> -->
              <a href="/logout" class="btn custom-btn">Logout</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3 col-lg-2 sidebar">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard/admin"
                ><img
                  src="/images/Dashboard.png"
                  alt="Logo"
                  class="logo-sidebar"
                />Dashboard</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/items"
                ><img
                  src="/images/Item.png"
                  alt="Logo"
                  class="logo-sidebar"
                />Item</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history"
                ><img
                  src="/images/History.png"
                  alt="Logo"
                  class="logo-sidebar"
                />History</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/transaction"
                ><img
                  src="/images/Transaction.png"
                  alt="Logo"
                  class="logo-sidebar"
                />Status</a
              >
            </li>
            <li class="nav-item">
                <a href="/account" class="nav-link"><img src="/images/account.png" alt="Logo" class="logo-sidebar">Accounts</a>
              </li>
          </ul>
        </div>
        <div class="col-md-9 col-lg-10 content">
          <h3><strong>Account List </strong></h3>
          <div class="container">
            
            <table class="table table-sm table-borderless custom-table mx-auto">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">NIM</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <% dtd.forEach((data) => { %>
              <tbody>
                <form>
                  <tr>
                    <td scope="row">
                        <%=data.id %>
                        <div
                          id="id"
                          name="id"
                          type="hidden"
                          value="<%=data.id %>"
                          style="background-color: white; border: none"
                        />
                    </td>
                    <td scope="row">
                      <%=data.name %>
                      <div
                        id="name"
                        name="name"
                        type="hidden"
                        value="<%=data.name %>"
                        style="background-color: white; border: none"
                      />
                    </td>
                    <td>
                      <%=data.username %>
                      <div
                        id="username"
                        name="username"
                        type="hidden"
                        value="<%=data.username %>"
                        style="background-color: white; border: none"
                      />
                    </td>
                    <td>
                      <a href="/edit/account/<%=data.id %>" class="btn btn-available" > Edit </a>
                      <!-- Borrow -->
                      <!-- </button> -->
                    </td>
                  </tr>
                </form>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
