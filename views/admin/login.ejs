<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/login.css">
</head>

<body>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card">
          <div class="card-content">
            <h3 class="text-center">FABBIS Inventory</h3>
            <div class="card-body">
              <form action="/user">
                <div class="form-group">
                  <label for="username">
                    <img src="/images/mdi_user.png" alt="Logo" class="logo">
                    <b>Username / E-Mail : </b></label>
                  <input type="text" class="form-control" id="username" name="username" >
                </div>
                <div class="form-group">
                  <label for="password">
                    <img src="/images/material-symbols_key.png" alt="Logo" class="logo">
                    <b>Password : </b></label>
                  <input type="password" class="form-control" id="password" name="password" >
                  <a href="#" class="forgot-password">Forgot Password</a>
                </div>
                <div class="form-group ">
                  <button type="submit" class="btn btn-primary">Sign In</button>
                  <br>
                  <a href="#" class="signup-text">Don't have an account? Sign Up</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>