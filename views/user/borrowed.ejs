<!DOCTYPE html>
<html>

<head>
    <title>My Borrowed Items</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/transaction.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-orange">
        <a class="navbar-brand" href="#">FABBIS Inventory</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto align-items-center">
                <li class="nav-item">
                    <img src="/images/Group 1.png" alt="Logo" class="logo">
                </li>
                <li class="nav-item">
                    <div class="logout">
                          <!-- <img src="/images/material-symbols_logout.png" alt="Logo" class="logo">Logout -->
                          <a href="/logout" class="btn custom-btn">Logout</a>
                          
                    </div>
                </li>
            </ul>
        </div>
    </nav>

 
    <div class="container-fluid">
        <div class="row">
          <div class="col-md-3 col-lg-2 sidebar">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/user"><img src="/images/Dashboard.png" alt="Logo" class="logo-sidebar">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/history/user"><img src="/images/History.png" alt="Logo" class="logo-sidebar">History</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/borrowed/user"><img src="/images/Transaction.png" alt="Logo" class="logo-sidebar">Borrowed</a>
              </li>
            </ul>
          </div>
          <div class="col-md-9 col-lg-10 content">
            <h3><strong>Item Status </strong></h3>
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                      <ul class="navbar-nav">
                        <li class="nav-item active">
                          <a class="nav-link nav-items" href="#">Items(s) Borrowed</a>
                        </li>
                      </ul>
                    </div>
                  </nav>
                  <table class="table table-borderless custom-table mx-auto">
                    <thead>
                      <tr>
                        <th scope="col">Item(s) ID</th>
                        <th scope="col">Item Name</th>
                        <th scope="col">Username</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Borrow Date</th>
                        <th scope="col">Return Date</th>
                        <th scope="col">Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% dtd.forEach((data) => { %>
                      <tr>
                        <th scope="row"><%=data.items_id %></th>
                        <td><%=data.nama %></td>
                        <td><%=data.username %></td>
                        <td><%=data.qty %></td>
                        <td><%=data.borrowedDate %></td>  
                        <td><%=data.returnDate %></td>
                        <td>
                          <%if (data.return_date > data.dateNow) { %>
                            <span class="btn btn-available text-white"><%=data.status %></span>
                          <% } else {%>
                            <span class="btn btn-unavailable text-white">Due Date</span>
                          <% } %>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
          </div>
        </div>
      </div>
    
    
</body>

</html>